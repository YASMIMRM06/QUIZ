<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-warning text-dark text-center">
        <h4>Recuperar Senha</h4>
      </div>
      <div class="card-body p-4">
        <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Digite seu e-mail cadastrado", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email@exemplo.com" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Enviar instruções de recuperação", class: "btn btn-warning btn-lg" %>
          </div>
        <% end %>

        <hr>
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
