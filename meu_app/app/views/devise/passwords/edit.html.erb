<div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-pink-100 via-purple-100 to-pink-200">
  <div class="w-full max-w-md bg-white shadow-2xl rounded-3xl border border-pink-200 p-10 mx-4">
    <h2 class="text-3xl font-bold mb-8 text-center text-pink-600">Troque sua senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-6">
        <%= f.label :password, "Nova senha", class: "block text-pink-700 font-medium mb-2" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-pink-400 mb-2">(<%= @minimum_password_length %> caracteres m√≠nimo)</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-pink-300 rounded-xl focus:ring-4 focus:ring-pink-300 focus:outline-none transition" %>
      </div>

      <div class="mb-8">
        <%= f.label :password_confirmation, "Confirme a nova senha", class: "block text-pink-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-pink-300 rounded-xl focus:ring-4 focus:ring-pink-300 focus:outline-none transition" %>
      </div>

      <div>
        <%= f.submit "Alterar senha",
            class: "w-full py-3 bg-pink-500 text-white font-bold rounded-xl hover:bg-pink-600 hover:shadow-xl transition transform hover:scale-105" %>
      </div>
    <% end %>

    <div class="text-center text-pink-600 text-lg mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
