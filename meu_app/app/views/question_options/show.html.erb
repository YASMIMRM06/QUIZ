<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-pink-50 mb-5 text-pink-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl text-pink-700 mb-5">Visualizando opção</h1>

  <%= render @question_option %>

  <div class="flex flex-col sm:flex-row mt-4 space-y-2 sm:space-y-0 sm:space-x-2">
    <%= link_to "Editar", edit_question_option_path(@question_option), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-pink-50 hover:bg-pink-100 text-pink-700 font-medium transition" %>
    <%= link_to "Voltar", question_options_path, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-pink-50 hover:bg-pink-100 text-pink-700 font-medium transition" %>
    <%= button_to "Excluir", @question_option, method: :delete, form_class: "sm:inline-block", class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer transition", data: { turbo_confirm: "Tem certeza?" } %>
  </div>
</div>
