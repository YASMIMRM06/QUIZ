<% content_for :title, "Editando opção de questão" %>

<div class="md:w-2/3 w-full bg-pink-50 border border-pink-200 rounded-3xl shadow-md p-8 mx-auto mt-10">
  <h1 class="font-bold text-4xl text-pink-700 mb-6 text-center">Editando opção de questão</h1>

  <%= render "form", question_option: @question_option %>

  <div class="mt-4 text-center flex flex-col sm:flex-row justify-center gap-2">
    <%= link_to "Ver esta opção", @question_option, class: "inline-block rounded-md px-3.5 py-2.5 bg-pink-100 hover:bg-pink-200 text-pink-700 font-medium transition" %>
    <%= link_to "Voltar para opções", question_options_path, class: "inline-block rounded-md px-3.5 py-2.5 bg-pink-100 hover:bg-pink-200 text-pink-700 font-medium transition" %>
  </div>
</div>
