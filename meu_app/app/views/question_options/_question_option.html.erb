<div id="<%= dom_id question_option %>" class="w-full sm:w-auto my-5 space-y-3 p-4 border border-pink-200 rounded-xl shadow-sm bg-pink-50">
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Título:</strong>
    <%= question_option.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Correta:</strong>
    <%= question_option.is_correct? ? "Sim" : "Não" %>
  </div>
  <div>
    <strong class="block font-medium mb-1 text-pink-600">Question:</strong>
    <%= question_option.question_id %>
  </div>
</div>
