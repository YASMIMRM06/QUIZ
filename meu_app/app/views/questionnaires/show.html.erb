<% content_for :title, "Visualizando Questionário" %>

<div class="max-w-3xl mx-auto mt-10 bg-pink-50 border border-pink-200 rounded-3xl shadow-md p-8 space-y-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-pink-100 text-pink-700 font-medium rounded-md inline-block"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl text-pink-700 mb-4 text-center">Visualizando Questionário</h1>

  <%= render @questionnaire %>

  <div class="flex flex-col sm:flex-row justify-center gap-2 mt-4">
    <%= link_to "Editar", edit_questionnaire_path(@questionnaire), class: "inline-block rounded-xl px-3.5 py-2.5 bg-pink-100 hover:bg-pink-200 text-pink-700 font-medium transition" %>
    <%= link_to "Voltar", questionnaires_path, class: "inline-block rounded-xl px-3.5 py-2.5 bg-pink-100 hover:bg-pink-200 text-pink-700 font-medium transition" %>
    <%= button_to "Excluir", @questionnaire, method: :delete, class: "inline-block rounded-xl px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white font-medium cursor-pointer transition", data: { turbo_confirm: "Tem certeza?" } %>
  </div>
</div>
