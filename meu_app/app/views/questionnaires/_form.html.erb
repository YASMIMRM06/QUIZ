<%= form_with(model: questionnaire, class: "contents") do |form| %>
  <% if questionnaire.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(questionnaire.errors.count, "error") %> proibiram este question√°rio de ser salvo:</h2>

      <ul class="list-disc ml-6">
        <% questionnaire.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% [:code, :title, :description, :duration_minutes].each do |field| %>
    <div class="my-5">
      <%= form.label field, class: "block text-pink-700 font-medium mb-2" %>
      <%= form.send("#{field}_field", class: ["block shadow-sm rounded-xl border px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-pink-300", {"border-red-400": questionnaire.errors[field].any?, "border-pink-300": questionnaire.errors[field].none?}]) %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-xl px-3.5 py-2.5 bg-pink-500 hover:bg-pink-600 text-white font-medium transition cursor-pointer" %>
  </div>
<% end %>
